// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  password       String
  publishedPosts Post[]
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime? @updatedAt @map("updated_at")

  @@map("users")
}

model Post {
  id          String @id @default(uuid())
  title       String
  content     String
  source      String // representa a fonte da noticia, de onde a passoa est√° tirando a noticia?
  User        User   @relation(fields: [publisherId], references: [id])
  publisherId String

  @@map("posts")
}
